<h1>Calculate Payment</h1>

<form action="/payment/results">
  <div>
    <label for="apr_input">
      APR
    </label>

    <input id="apr_input" text="text" name="user_rate" placeholder="E.g. 5.42">
  </div>

  <div>
    <label for="years_input">
      Number of years
    </label>

    <input id="years_input" text="text" name="user_term" placeholder="How many years to repay?">
  </div>

  <div>
    <label for="principal_input">
      Principal
    </label>

    <input id="principal_input" text="text" name="user_loan" placeholder="How much principal?">
  </div>

  <button>
    Calculate monthly payment
  </button>
</form>
